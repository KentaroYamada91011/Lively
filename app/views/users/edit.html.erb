<%= form_for @user do |f| %>
 <div class="field">

    <%= f.label :name %>
    <br>
    <%= f.text_field :name ,size: 140 %>
    <br>
    <%= f.label :image %>
    <br>
    <%= f.file_field :image ,size: 140 %>


 </div>
 <div class="action">
   <%= f.submit %>
 </div>
<% end %>

