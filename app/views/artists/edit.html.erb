<%= form_for @artist do |f| %>
 <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name ,size: 140 %>
    <br>
    <%= f.label :image %>
    <br>
    <%= f.file_field :image ,size: 140 %>
    <br>
    <%= f.label :memo %>
    <br>
    <%= f.text_field :memo ,size: 140 %>
  </div>
 <div class="action">
   <%= f.submit %>
 </div>
<% end %>

<h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", artist_registration_path(curent_artist), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
