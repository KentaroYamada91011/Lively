<div class="box11">
<div class="field-text", style="font-weight:bold;">
  ライブを投稿
</div>
    <%= form_for(@event, :url => { controller:'events', action:'update'})do |f| %>
    <div class="field" >
      <br>
      <%= f.text_field :name ,size: 140,:placeholder => "イベント名" %>
       <br>
       <br>
       <%= f.text_field :address ,size: 140,:placeholder => "場所" %>
       <br>
       <br>
       <%= f.label :"日付" %>
       <%= f.date_field :start_time ,size: 140,:placeholder => "日付" %>

       <br>
       <%= f.label :OPEN %>
       <%= f.time_field :open_time ,size: 140,:placeholder => "場所" %>
       <br>
       <%= f.label :"START" %>
       <%= f.time_field :start_time_ ,size: 140,:placeholder => "場所" %>
       <br>
       <%= f.label :ADV %>
       <br>
       <br>
       <%= f.text_field :price ,size: 140,:placeholder => "例) 2000" %>

       <%= f.check_box :adv_drink ,size: 140 %><%= f.label :"+1 drink" %>
       <br>
       <%= f.label :"DOOR" %>
       <br>
       <%= f.text_field :door_price ,size: 140,:placeholder => "例) 2500" %>

       <%= f.check_box :door_drink ,size: 140 %><%= f.label :"+1 drink" %>
       <br>
       <%= f.label :"メモ" %>
       <br>
       <%= f.text_field :memo ,size: 140,:placeholder => "対バン情報など" %>
       <br>
       <%= f.label :画像 %>
       <br>
       <%= f.file_field :image %>
     </div>
    <div class="action">

       <%= f.submit %>
 </div>
<% end %>
<%= link_to  event_path(@event), :method => "delete", data:{:confirm => '本当に削除しますか？' } do %>
  <div class="field-text">
    <i class="fas fa-trash-alt"></i>この投稿を削除する
  </div>

<% end %>
</div>
